<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/header" />

        <TextView
            android:id="@+id/make_app_service_name"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_gravity="right|bottom"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_android_black_24dp"
            android:id="@+id/make_app_tech_pic"/>

        <TextView
            android:id="@+id/make_app_tech_name"
            android:layout_width="125dp"
            android:layout_height="31dp"
            android:text=""
            android:textColor="@color/black"
            android:layout_gravity="bottom|left"
            android:gravity="center|left"
            android:textSize="20dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="contact"
        android:textSize="20dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/make_app_get_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:ems="10"
        android:hint="phone bazakubonaho"
        android:inputType="phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="location"/>

    <EditText
        android:id="@+id/make_app_get_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="kigali,kanombe"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/make_app_get_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="bizakorwa gute" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CalendarView
            android:id="@+id/make_app_get_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_calen" />
    </ScrollView>

    <Button
        android:id="@+id/make_app_button_submit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="submit"/>

</LinearLayout>
</ScrollView>