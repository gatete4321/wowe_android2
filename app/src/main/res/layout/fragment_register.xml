<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rwa"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/wwe" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp">

            <EditText
                android:id="@+id/register_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="name"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_person" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp">

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_email" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp">

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="phone"
                android:inputType="phone"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_phone" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp">

            <EditText
                android:id="@+id/register_password1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="password"
                android:inputType="textPassword"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_lock" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp">

            <EditText
                android:id="@+id/register_password2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="retype"
                android:inputType="textPassword"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_lock" />


        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/probar_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Sign Up"
            android:textSize="30dp"
            app:cornerRadius="20dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Sign In"
            android:textSize="30dp"
            app:cornerRadius="20dp" />


    </LinearLayout>

</ScrollView>